{
    "manifest_version": 3,
    "name": "BetterBridge",
    "description": "Makes the bridge better",
    "version": "1.0",
    "icons" : {
        "16": "images/TextLogo.png",
        "48": "images/TexttLogo.png"
      },
    "permissions": [
        "storage"
      ],
    "content_scripts": [
        {
          "matches": ["https://bridge.uleth.ca/*"],
          "css": ["css/styles.css"],
          "js": ["js/scripts.js"]
        }
      ],
      "action": {
        "default_popup": "popup.html"
      },
      "web_accessible_resources": [
        {
          "resources": [ "images/*"],
          "matches": ["https://www.ulethbridge.ca/*"]
        }
      ]
}